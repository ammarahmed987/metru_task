<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/nav_camera_fragment">

    <fragment
        android:id="@+id/nav_camera_fragment"
        android:name="com.example.metru.fragment.CameraFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_camera">

        <action
            android:id="@+id/action_nav_camera_fragment_to_nav_play_recording_fragment"
            app:destination="@id/nav_play_recording_fragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/nav_camera_fragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/nav_play_recording_fragment"
        android:name="com.example.metru.fragment.PlayRecordingFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_play_recording"/>

</navigation>